// Config controls the HTTP server bootstrap.
type Config struct {
    Addr string
}

// Server exposes a high-level HTTP transport placeholder.
type Server struct {
    cfg    Config
    router *Router
}

// NewServer constructs a server stub. Extend this to wire real middleware.
func NewServer(cfg Config) *Server {
    if cfg.Addr == "" {
        cfg.Addr = ":3333"
    }

    return &Server{
        cfg:    cfg,
        router: NewRouter(),
    }
}

