{{- $lb := "{{" -}}
{{- $rb := "}}" -}}
{{ printf "%s define \"title\" %s%s - DaisyUI Standalone%s end %s\n" $lb $rb .AppName $lb $rb }}
{{ printf "%s define \"body_class\" %smin-h-screen bg-base-200 text-base-content%s end %s\n" $lb $rb $lb $rb }}
{{ printf "%s define \"head\" %s\n" $lb $rb }}
    <link rel="stylesheet" href="/assets/styles/custom.css" />
    <script src="https://cdn.jsdelivr.net/npm/theme-change@2.0.2/index.js" defer></script>
{{ printf "%s end %s\n" $lb $rb }}
{{ printf "%s define \"content\" %s\n" $lb $rb }}
  <section class="hero bg-base-200 py-16">
    <div class="hero-content text-center">
      <div class="max-w-2xl">
        <span class="badge badge-outline badge-accent mb-4 uppercase tracking-[0.35em]">DaisyUI</span>
        <h1 class="text-5xl font-bold">{{ .AppName }}</h1>
        <p class="py-6 text-lg opacity-80">A batteries-included Go starter. Pick your stacks and ship faster.</p>
        <div class="flex flex-wrap justify-center gap-3">
          <a class="btn btn-primary" href="https://github.com/Parapheen/fullkek-starter" target="_blank" rel="noreferrer">
            View on GitHub
          </a>
          <a class="github-button" href="https://github.com/Parapheen/fullkek-starter" data-icon="octicon-star" data-size="large" data-show-count="true" aria-label="Star Parapheen/fullkek-starter on GitHub">Star</a>
        </div>
        <script async defer src="https://buttons.github.io/buttons.js"></script>
      </div>
    </div>
  </section>
  <section class="mx-auto grid max-w-6xl grid-cols-1 gap-6 p-6 sm:grid-cols-2 lg:grid-cols-3">
    <a class="card bg-base-100 shadow" href="https://github.com/Parapheen/fullkek-starter/tree/master/internal/templates/features/auth/github-oauth2">
      <div class="card-body">
        <h3 class="card-title">Auth · GitHub OAuth2</h3>
        <p>Integrate authentication flows backed by GitHub OAuth2.</p>
      </div>
    </a>
    <a class="card bg-base-100 shadow" href="https://github.com/Parapheen/fullkek-starter/tree/master/internal/templates/features/database/sqlite">
      <div class="card-body">
        <h3 class="card-title">Database · SQLite</h3>
        <p>Embed lightweight persistence with a production-ready SQLite setup.</p>
      </div>
    </a>
    <a class="card bg-base-100 shadow" href="https://github.com/Parapheen/fullkek-starter/tree/master/internal/templates/features/http/chi">
      <div class="card-body">
        <h3 class="card-title">HTTP · chi</h3>
        <p>Route requests with the composable <code>chi</code> router.</p>
      </div>
    </a>
    <a class="card bg-base-100 shadow" href="https://github.com/Parapheen/fullkek-starter/tree/master/internal/templates/features/http/standard">
      <div class="card-body">
        <h3 class="card-title">HTTP · standard</h3>
        <p>Lean on Go's standard library for handlers and middleware.</p>
      </div>
    </a>
    <a class="card bg-base-100 shadow" href="https://github.com/Parapheen/fullkek-starter/tree/master/internal/templates/features/frontend/fixi">
      <div class="card-body">
        <h3 class="card-title">Frontend · fixi</h3>
        <p>Declarative controllers to sprinkle interactivity in HTML.</p>
      </div>
    </a>
    <a class="card bg-base-100 shadow" href="https://github.com/Parapheen/fullkek-starter/tree/master/internal/templates/features/frontend/htmx">
      <div class="card-body">
        <h3 class="card-title">Frontend · htmx</h3>
        <p>Hypermedia-first UIs powered by server-driven fragments.</p>
      </div>
    </a>
    <a class="card bg-base-100 shadow" href="https://github.com/Parapheen/fullkek-starter/tree/master/internal/templates/features/styling/daisyui">
      <div class="card-body">
        <h3 class="card-title">Styling · daisyUI</h3>
        <p>Compose Tailwind-friendly components with theming built in.</p>
      </div>
    </a>
    <a class="card bg-base-100 shadow" href="https://github.com/Parapheen/fullkek-starter/tree/master/internal/templates/features/styling/tailwind">
      <div class="card-body">
        <h3 class="card-title">Styling · Tailwind</h3>
        <p>Use Tailwind utilities for precise layout and typography.</p>
      </div>
    </a>
    <a class="card bg-base-100 shadow" href="https://github.com/Parapheen/fullkek-starter/tree/master/internal/templates/features/styling/tailwind_basecoat">
      <div class="card-body">
        <h3 class="card-title">Styling · Tailwind Basecoat</h3>
        <p>Start from Basecoat's design tokens layered onto Tailwind.</p>
      </div>
    </a>
  </section>
{{ printf "%s end %s\n" $lb $rb }}
{{ printf "%s template \"base\" . %s\n" $lb $rb }}
